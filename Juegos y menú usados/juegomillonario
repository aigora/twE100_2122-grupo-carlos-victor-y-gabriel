    char x='ยบ',j;
    do
    {
        printf("Porfavor pulse espacio para continuar...\n");
        x=getch();
    }
    while(x!=' ');

    printf("PRIMERA PREGUNTA\n");
    printf("Cual es el rio mas largo del mundo?\n");
    printf("A.Amazonas\nB.Nilo\nC.Rio Misisipi\nD.Mekong\n");

