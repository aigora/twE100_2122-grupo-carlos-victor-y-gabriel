#include <stdio.h>
#include <time.h>
#include <stdlib.h>
int main()
{
int n, a,i=5;
char r;

//Genera semilla aleatoria
printf("Bienvenido al juego \n");
printf(".................... \n");
srand(time(NULL));
//Numero aleatorio entre 1 y 100
n = rand() % 100 +1;
for(i;i>=1;i--){
printf("\n te quedan %i intentos \n", i);
printf("escribe un número(0-100) : ");

scanf("%i", & a);

if(a<n){
printf("\nte quedas corto \n\n");
}else if(a>n){
printf("\nte pasas \n\n");

}else ;
if(a==n){
 printf("GANASTE!!!! ");
 return 1;
}else;
}
printf("\n perdiste el número es %i", n);

return 0;
}
