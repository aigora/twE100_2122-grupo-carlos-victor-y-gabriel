#include<stdio.h>
int main()
{
    int i;
    printf("Bienvenido a la parada: \n");
    printf("\n Nombre del juego\n");
    printf("Instrucciones del juego:\n ");
    printf("Si ya has leido las instrucciones y quieres empezar pulsa '1'\n");
    do
    {
        scanf("%d",&i);
        if(i!=1)
           printf("Algo ha ido mal intentalo de nuevo:");
    }
    while(i!=1);



    return 0;
}
